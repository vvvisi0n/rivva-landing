"use client";

import Link from "next/link";

type Props = {
  id: string;
  name: string;
  age?: number;
  location?: string;
  image?: string;
  compatibility?: number;
  vibeTags?: string[];
};

export default function MatchFeedCard({
  id,
  name,
  age,
  location,
  image,
  compatibility,
  vibeTags,
}: Props) {
  return (
    <Link
      href={`/matches/${id}`}
      className="block rounded-3xl bg-white/5 border border-white/10 overflow-hidden hover:bg-white/10 transition"
    >
      <div className="flex gap-4 p-4">
        <div className="h-20 w-20 rounded-2xl overflow-hidden bg-white/10 border border-white/10">
          {image ? (
            // eslint-disable-next-line @next/next/no-img-element
            <img src={image} alt={name} className="h-full w-full object-cover" />
          ) : (
            <div className="h-full w-full flex items-center justify-center text-xs text-white/40">
              No photo
            </div>
          )}
        </div>

        <div className="flex-1">
          <div className="flex items-baseline gap-2">
            <p className="text-lg font-semibold">{name}</p>
            {age ? <p className="text-sm text-white/60">{age}</p> : null}
          </div>

          {location ? <p className="text-sm text-white/60">{location}</p> : null}

          {typeof compatibility === "number" ? (
            <p className="mt-1 text-xs text-violet-300">
              {compatibility}% Lumi match
            </p>
          ) : null}

          {vibeTags && vibeTags.length > 0 ? (
            <div className="mt-2 flex flex-wrap gap-1.5">
              {vibeTags.slice(0, 3).map((t) => (
                <span
                  key={t}
                  className="rounded-full bg-white/10 border border-white/10 px-2 py-0.5 text-[11px] text-white/80"
                >
                  {t}
                </span>
              ))}
            </div>
          ) : null}
        </div>
      </div>
    </Link>
  );
}
