"use client";

import { useRouter } from "next/navigation";
import { useState } from "react";

type QuickSetupForm = {
  name: string;
  age: string;
  intent: string;
};

export default function QuickSetupPage() {
  const router = useRouter();
  const [form, setForm] = useState<QuickSetupForm>({
    name: "",
    age: "",
    intent: "",
  });
  const [isSubmitting, setIsSubmitting] = useState(false);

  const handleChange = (
    e: React.ChangeEvent<HTMLInputElement | HTMLSelectElement>
  ) => {
    const { name, value } = e.target;
    setForm((prev) => ({ ...prev, [name]: value }));
  };

  const canContinue =
    form.name.trim().length > 0 &&
    form.age.trim().length > 0 &&
    Number(form.age) > 17 &&
    form.intent.trim().length > 0;

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!canContinue) return;
    setIsSubmitting(true);

    // TODO: send to backend later
    try {
      // For now just simulate a small delay
      await new Promise((resolve) => setTimeout(resolve, 500));
      router.push("/quiz");
    } finally {
      setIsSubmitting(false);
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 text-slate-50">
      <div className="mx-auto flex max-w-xl flex-col px-4 pb-10 pt-8">
        {/* Lumi intro */}
        <header className="mb-6 space-y-3">
          <p className="text-xs uppercase tracking-[0.2em] text-slate-500">
            Quick setup
          </p>
          <h1 className="text-2xl font-semibold tracking-tight">
            Let&apos;s teach Lumi the basics.
          </h1>
          <p className="text-sm text-slate-400">
            No manual location fields, no endless forms. Rivva uses gentle geolocation
            signals behind the scenes. You just tell Lumi who you are and what
            you&apos;re here for.
          </p>
        </header>

        <form onSubmit={handleSubmit} className="space-y-6">
          {/* Name */}
          <div className="space-y-1.5">
            <label className="block text-sm font-medium text-slate-200">
              First name
            </label>
            <input
              name="name"
              value={form.name}
              onChange={handleChange}
              className="w-full rounded-xl bg-slate-900/80 px-3 py-2.5 text-sm text-slate-50 outline-none ring-1 ring-slate-800 placeholder:text-slate-500 focus:ring-emerald-500"
              placeholder="What should Lumi call you?"
              autoComplete="given-name"
            />
          </div>

          {/* Age */}
          <div className="space-y-1.5">
            <label className="block text-sm font-medium text-slate-200">
              Age
            </label>
            <input
              name="age"
              type="number"
              min={18}
              max={99}
              value={form.age}
              onChange={handleChange}
              className="w-full rounded-xl bg-slate-900/80 px-3 py-2.5 text-sm text-slate-50 outline-none ring-1 ring-slate-800 placeholder:text-slate-500 focus:ring-emerald-500"
              placeholder="18+ only"
            />
            <p className="text-xs text-slate-500">
              Lumi tunes compatibility differently for different life stages.
            </p>
          </div>

          {/* Intent */}
          <div className="space-y-1.5">
            <label className="block text-sm font-medium text-slate-200">
              What are you looking for right now?
            </label>
            <select
              name="intent"
              value={form.intent}
              onChange={handleChange}
              className="w-full rounded-xl bg-slate-900/80 px-3 py-2.5 text-sm text-slate-50 outline-none ring-1 ring-slate-800 focus:ring-emerald-500"
            >
              <option value="">Choose an option</option>
              <option value="long-term">
                A long-term relationship
              </option>
              <option value="meaningful-dating">
                Meaningful dating, see where it goes
              </option>
              <option value="new-connections">
                New people, shared interests & connection
              </option>
            </select>
          </div>

          {/* Lumi note */}
          <div className="rounded-2xl border border-slate-800 bg-slate-900/70 p-3 text-xs text-slate-300">
            <p>
              Lumi uses your age, intent, and patterns from your answers to
              quietly filter out mismatches. Location is inferred in the
              background, so you don&apos;t have to type your location.
            </p>
          </div>

          {/* Actions */}
          <div className="pt-2">
            <button
              type="submit"
              disabled={!canContinue || isSubmitting}
              className="flex w-full items-center justify-center rounded-full bg-emerald-500 px-4 py-2.5 text-sm font-semibold text-emerald-950 shadow-lg shadow-emerald-500/40 hover:bg-emerald-400 disabled:cursor-not-allowed disabled:bg-emerald-500/50"
            >
              {isSubmitting ? "Letting Lumi thinkâ€¦" : "Continue to Lumi&apos;s quiz"}
            </button>
            <p className="mt-2 text-center text-[11px] text-slate-500">
              You can refine these details anytime in Settings.
            </p>
          </div>
        </form>
      </div>
    </div>
  );
}
